<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 注意这里的namespace对应的是mapper全路径-->
<mapper namespace="com.perkins.mapper.UserMapper">
    <select id="getUser" resultType="com.perkins.beans.User">
        select * from user
    </select>
    <delete id="deleteUser" parameterType="Integer">
        delete from user where id =#{id}
    </delete>
    <insert id="addUser" parameterType="com.perkins.beans.User">
        insert into user(id,username,age)values(#{id},#{username},#{age})
    </insert>
</mapper>